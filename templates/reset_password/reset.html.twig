{% extends 'form_template.html.twig' %}

{% block title %}Réinitialiser votre mot de passe
{% endblock %}

{% block body %}
	<h1>Réinitialiser votre mot de passe</h1>

	{{ form_start(resetForm, {attr: {'novalidate': 'novalidate'}}) }}
	<div class="field-group">
		<div class="field">
			{{ form_widget(resetForm.password.first) }}
			<label for="reset_password_request_form_email"><i class='bx bx-envelope'></i>Entrez votre nouveau mot de passe</label>
		</div>

		<div class="field">
			{{ form_widget(resetForm.password.second) }}
			<label for="reset_password_request_form_email"><i class='bx bx-envelope'></i>Confirmez votre nouveau mot de passe</label>
			<div class="notice notice-error">{{ form_errors(resetForm.password.first) }}</div>
		</div>
	</div>

	<button class="btn btn-primary">Réinitialiser le mot de mot de passe</button>
	{{ form_end(resetForm) }}
{% endblock %}
